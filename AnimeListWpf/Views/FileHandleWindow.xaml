<Window x:Class="AnimeListWpf.Views.FileHandleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimeListWpf.Views"
        mc:Ignorable="d"
        Title="FileHandleWindow" Height="250" Width="400"
        Closing="Window_Closing"
        Loaded="Window_Loaded"
        ResizeMode="NoResize" Background="#FF252735">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Parsing" Name="ParsedFileName"
           VerticalAlignment="Center" FontSize="20" Margin="10 20" Foreground="white"/>
        <TextBlock Grid.Row="1" Text="Processing" Name="ContentNameLabel"
           VerticalAlignment="Center" FontSize="20" Margin="10 20" Foreground="white"/>
        <ProgressBar Grid.Row="2" Margin="10 20" Name="progressBar"/>
    </Grid>
</Window>
